<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.brzy</groupId>
  <artifactId>brzy</artifactId>
  <version>0.2</version>
  <packaging>pom</packaging>
  <name>Brzy</name>
  <properties>
    <scala.version>2.8.0.RC2</scala.version>
  </properties>
  <modules>
    <module>brzy-config</module>
    <module>brzy-shell</module>
    <module>brzy-mvc</module>
    <module>brzy-framework</module>
    <module>brzy-plugin-hibernate</module>
    <module>brzy-plugin-scalate</module>
    <module>brzy-plugin-squeryl</module>
    <module>brzy-plugin-cascal</module>
    <module>brzy-plugin-tomcat</module>
    <module>brzy-plugin-migration</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>nexus</id>
      <name>Nexus Staging Repo</name>
      <url>http://brzy.org/nexus/content/repositories/releases</url>
    </repository>
  </distributionManagement>
</project>
