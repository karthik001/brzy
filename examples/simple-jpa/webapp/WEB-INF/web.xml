<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		version="3.0">
	<description>Breezy Scala</description>
	<display-name>Breezy Web App</display-name>
	<context-param>
	    <param-name>brzy-env</param-name>
	    <param-value>development</param-value>
	  </context-param>
	<listener>
		<listener-class>org.brzy.application.WebAppListener</listener-class>
	</listener>
	<filter>
		<filter-name>BrzyFilter</filter-name>
		<filter-class>org.brzy.action.Filter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>BrzyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>ScalateServlet</servlet-name>
		<servlet-class>org.fusesource.scalate.servlet.TemplateEngineServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ScalateServlet</servlet-name>
		<url-pattern>*.ssp</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BrzyServlet</servlet-name>
		<servlet-class>org.brzy.action.Servlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>BrzyServlet</servlet-name>
		<url-pattern>*.brzy</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BrzyServlet</servlet-name>
		<url-pattern>/users/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
   <welcome-file>index.brzy</welcome-file>
  </welcome-file-list>
	<error-page>
    <error-code>404</error-code>
    <location>/error-404.ssp</location>
  </error-page>
	<error-page>
    <error-code>500</error-code>
    <location>/error-500.ssp</location>
  </error-page>
	<error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error-500.ssp</location>
  </error-page>
</web-app>
