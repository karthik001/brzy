<assembly>
  <id>resources</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/templates</directory>
      <outputDirectory>templates</outputDirectory>
    </fileSet>
    <fileSet>
      <includes>
        <include>${project.parent.basedir}/README*</include>
        <include>${project.parent.basedir}/LICENSE*</include>
        <include>${project.parent.basedir}/NOTICE*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>