	<filter>
		<filter-name>BrzyFilter</filter-name>
		<filter-class>org.brzy.servlet.BrzyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>BrzyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>BrzyServlet</servlet-name>
		<servlet-class>org.brzy.servlet.BrzyServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>BrzyServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
